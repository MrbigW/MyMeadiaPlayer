<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_player_loading_background">

    <ImageView
        android:id="@+id/iv_notifi_cover"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/audio_defalut"/>


    <LinearLayout
        android:id="@+id/ll_nitifi_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_notifi_cover"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_notifi_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="beiji beijin"
            android:textColor="@android:color/white"
            android:textSize="23sp"/>

        <TextView
            android:id="@+id/tv_notifi_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:text="02:02"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_notifi_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_nitifi_top"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_notifi_cover"
        android:text="汪半壁"
        android:textColor="#c9c5c5"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_notifi_artist"
        android:layout_toRightOf="@id/iv_notifi_cover"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_notifi_pre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_previous_white_48dp"/>

        <ImageView
            android:id="@+id/iv_notifi_play_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/uamp_ic_pause_white_48dp"/>

        <ImageView
            android:id="@+id/iv_notifi_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_next_white_48dp"/>


    </LinearLayout>


</RelativeLayout>